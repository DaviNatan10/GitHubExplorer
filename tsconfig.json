{
  "compilerOptions": {                                  
     "lib": ["dom","DOM.Iterable","ESNext"],                                    
     "jsx": "react-jsx",  
     "target": "ES6",  
     "module": "ESNext",                                                            
     "moduleResolution": "node", 
     "resolveJsonModule": true,
     "isolatedModules": true,                    
     "allowJs": true,                                               
     "noEmit": true,                                  
     "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
